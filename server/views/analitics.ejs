<script>
    const fbPixel = localStorage.getItem("fbpixel");
    if(fbPixel) {
        const img = document.createElement("img");
        img.setAttribute("id", new Date().getTime());
        img.style.display = "none";
        img.style.width = '1px';
        img.style.height = '1px';
        img.setAttribute("src", `https://www.facebook.com/tr?id=${fbPixel}&ev=Lead`);

        img.onload = () => document.body.removeChild(img);
        img.onerror = () => document.body.removeChild(img);

        document.body.appendChild(img);
        localStorage.removeItem("fbpixel");
    }
</script>

<script>
    const arbitFB = localStorage.getItem("arbit_fb");
    const arbitGoogle = localStorage.getItem("arbit_google");
    if(arbitFB || arbitGoogle) {
        const iframe = document.createElement("iframe");
        const urlObject = {};
        if (arbitFB) {
            urlObject.arbit_fb = arbitFB;
        }
        if (arbitGoogle) {
            urlObject.arbit_google = arbitGoogle;
        }
        const queryObject = new URLSearchParams(urlObject);
        const queryString = queryObject.toString();
        iframe.setAttribute("id", new Date().getTime());
        iframe.style.display = "none";
        iframe.style.width = '1px';
        iframe.style.height = '1px';
        iframe.setAttribute("src", `https://analytics-static.nyc3.cdn.digitaloceanspaces.com/index.html?${queryString}`);

        iframe.onload = () => document.body.removeChild(iframe);
        iframe.onerror = () => document.body.removeChild(iframe);

        document.body.appendChild(iframe);
        localStorage.removeItem("arbit_fb");
        localStorage.removeItem("arbit_google");
    }
</script>